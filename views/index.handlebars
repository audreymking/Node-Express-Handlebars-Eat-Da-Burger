<h1>Eat Da Burger Game!</h1>

<h2>Eat these burgers!</h2>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li>
                {{this.burger_name}}
                <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{this.devoured}}">
                    {{#if this.devoured}}Buy Another One!{{else}}Eat!{{/if}}
                </button>
                <button class="delete-burger" data-id="{{this.id}}">Throw it away!</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been eaten:</h2>

<ul>
    {{#each burgers}}
        {{#if this.devoured}}
            <li>
                {{this.burger_name}}
                <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{this.devoured}}">
                    {{#if this.devoured}}Buy Another One!{{else}}Eat!{{/if}}
                </button>
                <button class="delete-burger" data-id="{{this.id}}">Delete Burger!</button>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">

    <div class="form-group">
        <label for="ca">Enter the name of the burger:</label>
        <input type="text" id="ca" name="name">
    </div>
    <button type="submit">Add the Burger</button>
</form>